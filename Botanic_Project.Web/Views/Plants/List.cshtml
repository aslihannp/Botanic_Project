@model List<Botanic_Project.Web.Models.Entities.Plant>

<h1 class="text-center mb-4" style="color:#285A84; font-weight:bold;">Plant List</h1>

<div class="container p-5 border rounded shadow-lg bg-white">
    <table class="table table-bordered table-hover">
        <thead class="table-success text-center">
            <tr>
                <th style="width: 10%;">Id</th>
                <th style="width: 40%;">Plant Name</th>
                <th style="width: 40%;">Family of the Plant</th>
                <th style="width: 10%;">Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var plant in Model)
            {
                <tr>
                    <td class="align-middle">@plant.Id</td>
                    <td class="align-middle">@plant.Name</td>
                    <td class="align-middle">@plant.Family</td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary btn-sm" asp-controller="Plants" asp-action="Edit" asp-route-id="@plant.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

