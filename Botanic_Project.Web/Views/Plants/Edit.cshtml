@{
}
@model Botanic_Project.Web.Models.Entities.Plant

<h1 class="text-center mb-4" style="color:#285A84; font-weight:bold;">Edit Plant</h1>

@if (Model is null)
{
    <div class="alert alert-warning text-center" role="alert">
        No plant was found with this ID.
    </div>
}
else
{
    <div class="container p-5 border rounded shadow-lg bg-white">
        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">Plant ID:</label>
                <input type="text" class="form-control" asp-for="Id" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Plant Name:</label>
                <input type="text" class="form-control" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Plant Family:</label>
                <input type="text" class="form-control" asp-for="Family" />
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Additional Description:</label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
            </div>
            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="WithFlower" asp-for="WithFlower" />
                <label class="form-check-label fw-bold" for="WithFlower">With Flower</label>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success me-3">Save</button>
                <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Plants">Delete</button>
            </div>
        </form>
    </div>
}

