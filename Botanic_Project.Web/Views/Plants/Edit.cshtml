@{
}
@model Botanic_Project.Web.Models.Entities.Plant

<h1>Edit Plant</h1>
@if (Model is null)
{
    <p>No plant was found with this id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Plant Id:</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Plant Name:</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Plant Family:</label>
            <input type="text" class="form-control" asp-for="Family" />
        </div>
        <div class="mt-3">
            <label class="form-label">Additional Description:</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>
        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="WithFlower" asp-for="WithFlower" />
            <label class="form-check-label" for="WithFlower">With Flower:</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn-primary">Save</button>
            <button type="submit" class="btn-danger ms-3" asp-action="Delete" asp-controller="Plants">Delete</button>
        </div>

    </form>
}
