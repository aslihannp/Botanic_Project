@model Botanic_Project.Web.Models.LoginViewModel
<link rel="stylesheet" href="~/css/login.css"/>
<h2 class ="text-center my-4">Login</h2>
@{
    <div asp-validation-summary="All" class="test-danger"></div>
}
<div class="container d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="width: 400px;">
        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" asp-for="RememberMe" />
                <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-block mb-2">Login</button>
                <a class="btn btn btn-success btn-block  mb-2" asp-controller="Login" asp-action="Register">Register</a>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {//buradan emin deilim?
                <div class="alert alert-danger mt-3">
                    Invalid login attempt.
                </div>
            }
        </form>        
    </div>
</div>