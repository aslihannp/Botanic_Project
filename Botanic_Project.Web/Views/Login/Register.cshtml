@{
}
@model Botanic_Project.Web.Models.RegisterViewModel
<h2>Register</h2>
@{
    <div asp-validation-summary="All" class="test-danger"></div>
}
<form method="post">
    <div class="mt-3">
        <label class="form-label">First Name:</label>
        <input type="text" class="form-control" asp-for="FirstName" />
    </div>
    <div class="mt-3">
        <label class="form-label">Last Name :</label>
        <input type="text" class="form-control" asp-for="LastName" />
    </div>
    <div class="mt-3">
        <label class="form-label">Email:</label>
        <input type="text" class="form-control" asp-for="Email" />
    </div>
    <div class="mt-3">
        <label class="form-label">Username:</label>
        <input type="text" class="form-control" asp-for="UserName" />
    </div>
    <div class="mt-3">
        <label class="form-label">Password:</label>
        <input type="text" class="form-control" asp-for="Password" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn-primary">Save</button>
    </div>
    <a class="btn btn-primary" asp-controller="Login" asp-action="Login">Back To Login Page</a>
</form>